.mpr-breadcrumb-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
    background-color: white;
    box-shadow: 0em 0.2em 0.2em 0 rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    margin: 1em;
    padding: 1em;
}
.mpr-breadcrumb-container > a {
    color: #111;
}
.mpr-breadcrumb-container > a:visited {
    color: #111;
}

.mini-category-link {
    display: block;
    box-shadow: 0 0 0.2em #0003;
    font-size: 0.8em;
    border-radius: 2em;
    padding: 0.6em;
    text-decoration: none;
    text-align: center;
    color: initial;
}

.menu-container button:hover:not(.menu-button) {
    background-color: rgba(255, 255, 255, 0.8);
    cursor: pointer;
}

@media only screen and (max-width: 640px) {
    .menu-container {
        position: fixed;
        width: 100%;
    }
}

.brand-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 1em;
}
.brand-link-container {
    max-width: 320px;
}
.brand-link-image {
    display: flex;
    height: 250px;
    align-items: center;
}

.category-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5em;
    margin-top: 0.5em;
    margin-bottom: 0.5em;
}

.category-link {
    display: block;
    box-shadow: 0em 0em 0.3em rgba(0, 0, 0, 0.1);
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    font-size: 1em;
    font-weight: bold;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    text-align: center;
    color: #111;
}
.category-link:visited {
    color: #111;
}
.pie-page-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
    gap: 2em;
}
.pie-page-wrapper > div {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.pie-page-wrapper > td {
    padding: 0.25em 0.75em;
}

.pie-page-wrapper > table tr td {
    border-bottom: 1px solid black;
}

.pie-page-wrapper > table tr:last-of-type td {
    border: none;
}

.pie-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;
    gap: 1em;
}
.pie-link-card-container {
    max-width: 320px;
}

.filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5em;
    margin: 1em;
}
.filters a {
    cursor: pointer;
    border: 1px dotted grey;
    color: black;
    text-decoration: none;
    background: rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border-radius: 0.5em;
    background-color: transparent;
    padding: 0.5em;
}
.filters a:hover {
    background-color: rgba(0, 0, 0, 0.1);
}
.filters a.selected {
    border: 1px solid black;
}
